            -webkit-mask-image: linear-gradient(to bottom, rgba(255, 255, 255, 0) -82%, rgba(124, 144, 177, 0.3) -20%, rgba(46, 65, 97, 0.9) 72%);*@
            background-image: linear-gradient(to bottom, rgb(255 255 255 / 0%) 0%, #3d4c6700 0%, rgb(14 26 47 / 75%) 70%), url(@bannerImgUrl);
            background-repeat: no-repeat;
            background-size: cover;
            padding: 0px !important;
