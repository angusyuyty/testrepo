@code {
    [Parameter]
    public List<String> bannerTitle { get; set; } = new List<string>();
    [Parameter]
    public String bannerImgUrl { get; set; } = "/images/shutterstock_171507251.jpg";
    [Parameter]
    public String bannerContainerCss { get; set; }
}
