<section id="bannerContainer" style="@bannerContainerCss">
    <BSJumbotron class="pt-12 pt-md-13 jumbotronContainer py-0">
        <div id="jumbotronContent">
            @if (bannerTitle.Count > 0)
            {
                @foreach (String title in bannerTitle)
                {
                    <p>
                        <BSLabel Class="bannerTitle">@title</BSLabel>
                    </p>
                }
            }
        </div>
    </BSJumbotron>
</section>

<style>
