        }

    .jumbotronContainer {
        position: relative;
        color: #FFF;
        font-size: 14rem;
        line-height: 0.9;
        background-color: transparent;
        width: 100%;
        margin-left: 5vw;
        margin-top: 5vh;
        height: 50vh;
        display: flex;
        align-items: center;
    }

    .container {
        text-align: left;
    }

    #jumbotronContent {
        font-family: 'Roboto', sans-serif;
        /*font-size: 35px;*/
        font-weight: 600;
        font-stretch: normal;
        font-style: normal;
        line-height: 1.91;
        letter-spacing: normal;
        color: #fff;
    }
        #jumbotronContent p, #jumbotronContent p label {
            margin-bottom: 0px;
            font-size: 2.8vw;
            letter-spacing: 0.7px;
        }
        #jumbotronContent p:first-child {
            /*font-size: 55px;*/
            /*line-height: 1.22;*/
        }

    @@media only screen and (max-width: 970px) {
        #bannerContainer .bannerTitle {
            font-size: 8vw;
        }
        #jumbotronContent p:first-child {
            font-size: 12vw;
        }
        #jumbotronContent p, #jumbotronContent p label {
            margin-bottom: 0px;
