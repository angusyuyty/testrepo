<!-- FAQ -->
<section class="pt-10 pt-md-12" id="faqSection">
    <div class="w-100" id="faqBannerImg"></div>
    <h2 id="faqTitle" class="landingHeader">@faqTitle</h2>
    <h3 id="faqSubTitle" class="landingSubHeader col-12 col-lg-4 col-xl-4">@faqSubTitle</h3>
    <div class="p-6 container faqSection my-5">
        <div class="row d-flex justify-content-between">
            @if (faqs != null && faqs.Count > 0)
            {
                <div class="row">
                    @foreach (String faq in faqs)
                    {
                        <div class="col-xl-4 col-lg-4 col-12 d-flex px-1">
                            <i class="fas fa-question-circle"></i>
                            <div class="ms-5 faqContent">
                                <h4 class="text-decoration-underline">
                                    <NavLink href="/frequentlyAskedQuestion" class="faqLinks">
                                        @faq
                                    </NavLink>
                                </h4>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
    <div class="row mr-4" id="moreDetailDiv">
        <h4 class="text-decoration-underline">
            <NavLink href="/frequentlyAskedQuestion" class="faqLinks">More Details</NavLink>
        </h4>
    </div>
</section>
<style>
    #faqTitle {
        font-weight: bold;
    }

    #faqSection {
        margin-bottom: 15vh;
        text-align: center;
    }

        #faqSection .faqLinks, #faqSection .faqLinks a {
            color: #334564 !important;
            font-family: 'Roboto', sans-serif;
            font-weight: bold;
        }

        #faqSection .faqSection {
            display: inline-flex;
            text-align: left;
            color: #2E4161;
        }

        #faqSection #moreDetailDiv {
            text-align: end !important;
            font-size: 1vw;
            font-weight: lighter;
        }

    #faqBannerImg {
        background-image: url(/images/shutterstock_631299092.jpg);
        background-size: cover;
        background-repeat: no-repeat;
        /*background-position: 50% 70%;*/
        background-position: 100% 75%;
        clip-path: polygon(0% 25%, 100% 0%, 100% 75%, 0% 100%);
        min-height: 45rem;
    }

    .fa-question-circle {
        color: #3DD17B;
        font-size: 33px;
        margin: 1vw;
    }

    .landingSubHeader {
        font-size: 1vw;
        display: inline-flex;
        font-weight: lighter;
    }

    .faqContent {
        align-self: center;
    }

        .faqContent h4 a, #moreDetailDiv h4 a {
            font-size: 0.91vw;
        }

    @@media only screen and (max-width: 970px) {
        #faqSubTitle, #faqSection #moreDetailDiv, .landingSubHeader, .faqContent h4 a, #moreDetailDiv h4 a {
            font-size: 5vw !important;
        }
    }
</style>

@code {
    [Parameter]
    public String faqTitle { get; set; }
    [Parameter]
    public String faqSubTitle { get; set; }
    [Parameter]
    public List<String> faqs { get; set; }

    protected override Task OnParametersSetAsync()
    {
        faqTitle = "Frequently Asked Questions";
        faqSubTitle = "Please click the relevant area to see if the information here \n can meet your need. If you have further enquiry, please \n contact us.";
        if (faqs == null)
            faqs = new List<String>();
        faqs.Add("What is Private Pilot License (PPL)");
        faqs.Add("What is Commercial Pilot Liense (CPL)");
        faqs.Add("What is Instrument Rating (IR)");
        faqs.Add("What is the minimum age to become a pilot in Hong Kong?");
        faqs.Add("What  do I need to start pilot training in Hong Kong?");
        faqs.Add("What are the minimum educational requirements to become a pilot in Hong Kong?");
        faqs.Add("What is the maximum age for airline pilots in Hong Kong?");
        faqs.Add("How to convert foreign pilot license?");
        faqs.Add("Can I be an instructor with an airline transport pilot license (ATPL)?");
        return base.OnParametersSetAsync();
    }
}
