@using CADPLIS.Application.Contracts.MCApplications
<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <h1>Dashboard</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>

            <div class="row">
                <div class="col-xl-12">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="far fa-calendar-alt me-1"></i>
                            Appointments
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-xl-4 col-md-6">
                                    <div class="card border-warning text-white mb-4">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="me-3">
                                                    <h5 class="text-warning fw-bold">Pending to confirm</h5>
                                                    <div class="fw-bold text-muted">@applicationCountmodel.PendingToConfirmNum</div>
                                                </div>
                                                <i class="fas fa-exclamation-triangle text-warning fa-2x"></i>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-warning d-flex align-items-center justify-content-between">
                                            <a class="small text-white stretched-link fw-bold" href="#">Show more</a>
                                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                        </div>

                                    </div>
                                    <!--/card-->
                                </div>

                                <div class="col-xl-4 col-md-6">
                                    <div class="card border-success text-white mb-4">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="me-3">
                                                    <h5 class="text-success fw-bold">Confirmed</h5>
                                                    <div class="fw-bold text-muted">@applicationCountmodel.ConfirmedNum</div>
                                                </div>
                                                <i class="fas fa-check text-success fa-2x"></i>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-success d-flex align-items-center justify-content-between">
                                            <a class="small text-white stretched-link fw-bold" href="#">Show more</a>
                                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                        </div>

                                    </div>
                                    <!--/card-->
                                </div>
                            </div>
                            <!--/row-->
                        </div>
                    </div>
                </div>
            </div>
            <!--/row-->

            <div class="row">
                <div class="col-xl-12">
                    <div class="card mb-4">
                        <div class="card-header">
                            <i class="fas fa-edit me-1"></i>
                            Applications
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-xl-4 col-md-6">
                                    <div class="card border-warning text-white mb-4">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="me-3">
                                                    <h5 class="text-warning fw-bold">Outstanding</h5>
                                                    <div class="fw-bold text-muted">@applicationCountmodel.OutstandingNum</div>
                                                </div>
                                                <i class="fas fa-exclamation-triangle text-warning fa-2x"></i>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-warning d-flex align-items-center justify-content-between">
                                            <a class="small text-white stretched-link fw-bold" href="#">Show more</a>
                                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                        </div>

                                    </div>
                                    <!--/card-->
                                </div>

                                <div class="col-xl-4 col-md-6">
                                    <div class="card border-primary text-white mb-4">
                                        <div class="card-body">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <div class="me-3">
                                                    <h5 class="text-primary fw-bold">Submitted</h5>
                                                    <div class="fw-bold text-muted">@applicationCountmodel.SubmittedNum</div>
                                                </div>
                                                <i class="fas fa-check text-primary fa-2x"></i>
                                            </div>
                                        </div>
                                        <div class="card-footer bg-primary d-flex align-items-center justify-content-between">
                                            <a class="small text-white stretched-link fw-bold" href="#">Show more</a>
                                            <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                                        </div>

                                    </div>
                                    <!--/card-->
                                </div>
                            </div>
                            <!--/row-->
                        </div>

                    </div>
                </div>
                <!--/row-->

            </div>

        </div>
    </main>
</div>
