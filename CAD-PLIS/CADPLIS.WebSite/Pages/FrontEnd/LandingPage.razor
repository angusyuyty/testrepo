@page "/landing"
@using CADPLIS.WebSite.Components
@using CADPLIS.WebSite.Components.LandingPage
@inject IJSRuntime js

<BSRow Class="p-0 m-0">
    <BSCol Class="col-12 p-0 m-0 mainContent">
        <Banner bannerImgUrl="/images/shutterstock_171507251.jpg" bannerTitle="@bannerTitle" bannerContainerCss="margin-bottom: 0px;"></Banner>
        <Carousel></Carousel>
        <Steps></Steps>
        <NewsCarousel></NewsCarousel>
        <FAQ></FAQ>
    </BSCol>
    <BSCol Class="col jumpMenuCol d-none d-lg-flex d-xl-flex">
        <JumpMenu links="@links"></JumpMenu>
    </BSCol>
</BSRow>

<style>
    .landingHeader {
        justify-content: center;
    }

    .mainContent {
        background-color: #F7FBFD;
    }

    .sectionTitle {
        font-family: 'Roboto', sans-serif;
        font-size: 36px;
        font-weight: 600;
        font-stretch: normal;
        font-style: normal;
        line-height: normal;
        letter-spacing: normal;
        color: #35496e;
        text-align: center;
    }

    .jumpMenuCol {
        position: absolute;
        left: 95%;
    }

    #bannerContainer {
        margin-bottom: 15vh;
    }
</style>

