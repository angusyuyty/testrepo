@code {
    [Parameter]
    public bool isForgotPassword { get; set; } = false;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        Console.WriteLine("## OnInitialized: " + NavigationManager.Uri);
        if (NavigationManager.Uri.Contains("/forgotPassword"))
        {
            isForgotPassword = true;
        }
    }
}
