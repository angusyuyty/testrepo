@page "/forgot"
@page "/forgotLoginId"
@page "/forgotPassword"
@layout FrontEndAccountLayout
@inject NavigationManager NavigationManager

<section id="forgotSection">
    <div class="row justify-content-center">
        @*<div class="col-8 mr-3 p-5">*@
        <AccountContentForm>
            <div class="my-4">
                @if (isForgotPassword)
                {
                    <h3 class="contentHeader">Forgot password</h3>
                }
                else
                {
                    <h3 class="contentHeader">Forgot login ID</h3>
                }
            </div>
            <div class="my-4">
                @if (isForgotPassword)
                {
                    <h5 class="contentSubHeader">Please enter the information to receive password</h5>
                }
                else
                {
                    <h5 class="contentSubHeader">Please enter the information to receive login ID</h5>
                }
            </div>
            <div class="my-3">
                <label class="inputDescLabel">HKID / Passport no.*</label>
                <input class="form-control" />
            </div>
            <div class="my-3">
                <label class="inputDescLabel">Date of Birth*</label>
                <input class="form-control" />
            </div>
            <div class="my-3">
                <button class="btn btn-primary w-100 confirmBtn">Confirm</button>
            </div>
        </AccountContentForm>
        @*</div>*@
        @*<div class="col" id="imgHolder">
                &nbsp;
            </div>*@
        <AccountBannerImageHolder BackgroundImageUrl="/images/Img_002.jpeg"></AccountBannerImageHolder>
    </div>
</section>

