@page "/accountCreated"
@inject NavigationManager NavigationManager
<section id="accountCreated">
    <div class="row justify-content-center">
        @*<div class="col-7">*@
        <AccountContentForm>
            <div class="row">
                <h3 class="contentHeader">
                    Account created successfully
                </h3>
            </div>
            <div class="row">
                <p>
                    Please check your email for information to access your account.
                </p>
            </div>
            <div class="row">
                <button type="button" class="btn btn-primary confirmBtn" @onclick="() => { backToLoginPage(); }">Login page</button>
            </div>
        </AccountContentForm>
        @*</div>*@
        @*<div class="col-2" id="imgHolder">
                &nbsp;
            </div>*@
        <AccountBannerImageHolder BackgroundImageUrl="images/Img_004.jpeg"></AccountBannerImageHolder>
    </div>
</section>

<style>
    /*#imgHolder {
        background-image: url(images/Img_004.jpeg);
    }*/
</style>

@code {

    public void backToLoginPage()
    {
        NavigationManager.NavigateTo("/frontLogin");
    }
}
